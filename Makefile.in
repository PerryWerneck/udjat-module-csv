
#---[ Library configuration ]------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
SONAME=@SONAME@

LIBRARY_SOURCES= \
	$(wildcard src/library/*.cc) \
	$(wildcard src/library/loaders/*.cc) \
	$(wildcard src/library/columns/*.cc) \
	$(wildcard src/library/iterator/*.cc) \
	$(wildcard src/library/os/@OSNAME@/*.cc)

MODULE_SOURCES= \
	$(wildcard src/module/*.cc) \

TEST_SOURCES= \
	$(wildcard src/testprogram/*.cc)

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
DLLTOOL=@DLLTOOL@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
srcdir=@srcdir@
sysconfdir=/etc

OBJDIR=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

CFLAGS= \
	@CXXFLAGS@ \
	-DBUILD_DATE=`date +%Y%m%d` \
	-I$(srcdir)/src/include \
	@UDJAT_CFLAGS@

LDFLAGS=\
	@LDFLAGS@

LIBS= \
	@LIBS@ \
	@UDJAT_LIBS@
	
#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc
	
	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc
	
	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

Release: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@
	
$(BINRLS)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		@DLL_LDFLAGS@ \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJRLS)/$(SRC).o) \
	$(BINRLS)/$(SONAME)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

$(BINRLS)/libudjatcsv.a: \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(AR) rcs $@ $^

#---[ Install Targets ]------------------------------------------------------------------

install: \
	install-@OSNAME@ \
	install-module \
	install-dev

install-linux: \
	$(BINRLS)/$(SONAME)

	# Install library
	@$(MKDIR) $(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(SONAME) \
		$(DESTDIR)$(libdir)/$(SONAME)
		
install-windows: \
	$(BINRLS)/@SONAME@

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(bindir)/@SONAME@
		
install-module: \
	$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@

	@$(MKDIR) \
		$(DESTDIR)@MODULE_PATH@

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME)@LIBEXT@ \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

install-dev: \
	install-@OSNAME@-dev \
	install-@OSNAME@-static 
	
	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/tools/datastore

	@$(INSTALL_DATA) \
		src/include/udjat/tools/datastore/*.h \
		$(DESTDIR)$(includedir)/udjat/tools/datastore

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/tools/datastore/columns

	@$(INSTALL_DATA) \
		src/include/udjat/tools/datastore/columns/*.h \
		$(DESTDIR)$(includedir)/udjat/tools/datastore/columns

	# Install PKG-CONFIG files
	@$(MKDIR) \
		$(DESTDIR)$(libdir)/pkgconfig

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/dynamic.pc \
		$(DESTDIR)$(libdir)/pkgconfig/udjat-csv.pc

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/static.pc \
		$(DESTDIR)$(libdir)/pkgconfig/udjat-csv-static.pc

install-linux-static: \
	$(BINRLS)/libudjatcsv.a

	# Install static library
	@$(MKDIR) $(DESTDIR)$(libdir)
	@$(INSTALL_DATA) \
		$(BINRLS)/libudjatcsv.a \
		$(DESTDIR)$(libdir)/libudjatcsv.static.a

install-windows-static: \
	$(BINRLS)/libudjatcsv.a

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/libudjatcsv.a \
		$(DESTDIR)$(libdir)/libudjatcsv.a

install-linux-dev:

	# Install linux SDK
	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(LN_S) \
		$(SONAME) \
		$(DESTDIR)$(libdir)/libudjatcsv.so

install-windows-dev:

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(DLLTOOL) \
		--input-def $(BINRLS)/udjatcsv.def \
		--dllname @SONAME@ \
		--output-lib $(DESTDIR)$(libdir)/libudjatcsv.dll.a
		
	
#---[ Uninstall Targets ]----------------------------------------------------------------

uninstall: \
	uninstall-@OSNAME@

uninstall-linux:

	@rm -f \
		$(DESTDIR)@MODULE_PATH@/$(PACKAGE_NAME)@LIBEXT@

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/udjat@EXEEXT@

$(BINDBG)/udjat@EXEEXT@: \
	$(foreach SRC, $(basename $(TEST_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LDFLAGS) \
		$(LIBS)


$(BINDBG)/$(SONAME): \
	$(foreach SRC, $(basename $(LIBRARY_SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		@DLL_LDFLAGS@ \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

$(BINDBG)/$(PACKAGE_NAME)@LIBEXT@: \
	$(foreach SRC, $(basename $(MODULE_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(BINDBG)/$(SONAME)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-Wl,-rpath,$(BINDBG) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

run: \
	$(BINDBG)/udjat@EXEEXT@

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/udjat@EXEEXT@ -f

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
		$(BINDBG)/udjat@EXEEXT@ -f
endif

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease


-include $(foreach SRC, $(basename $(LIBRARY_SOURCES) $(MODULE_SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(LIBRARY_SOURCES) $(MODULE_SOURCES)), $(OBJRLS)/$(SRC).d)


